@model WebAppEs.ViewModel.FaultsEntry.MobileRNDFaultsEntryViewModel
@{ ViewData["Title"] = "Preview"; }


<div class="row">
    <div class="col-12">
        <!-- Main content -->
        <div class="invoice p-3 mb-3">
            <!-- title row -->
            <div class="row">
                <div class="col-12">
                    <h4 style="color: brown; font-weight: bolder;">
                        <span style="color: darkgreen; font-weight: bolder;">Date:</span> @Model.DateString
                        @*<span class="float-right">Line ID: @Model.LineID</span>*@
                    </h4>
                </div>
                <!-- /.col -->
            </div>
            <div class="col-sm-12">
                <div class="row">
                    <div class="col-sm-7 five-three">
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="card card-outline card-primary">
                                    <div style="padding: 0px; text-align: center; padding-top: 11px;" class="card-header">
                                        <h6 style="color: blue; font-weight: 700;" class="card-title">Line</h6>
                                    </div>
                                    <!-- /.card-header -->
                                    <div class="card-body cbbb">
                                        <h2 style="text-align: center; color: brown;">@Model.Line</h2>
                                    </div>
                                    <!-- /.card-body -->
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="card card-outline card-primary">
                                    <div style="padding: 0px; text-align: center; padding-top: 11px;" class="card-header">
                                        <h6 style="color: blue; font-weight: 700;"class="card-title">Model</h6>
                                    </div>
                                    <!-- /.card-header -->
                                    <div class="card-body cbbb">
                                        <h2 style="text-align: center; color: brown;">@Model.ModelNameWithLot</h2>
                                    </div>
                                    <!-- /.card-body -->
                                </div>
                            </div>
                            <div class="col-sm-4">
                                <div class="card card-outline card-primary">
                                    <div style="padding: 0px; text-align: center; padding-top: 11px;" class="card-header">
                                        <h6 style="color: blue; font-weight: 700;" class="card-title">Total Checked Qty</h6>
                                    </div>
                                    <!-- /.card-header -->
                                    <div class="card-body cbbb">
                                        <h2 style="text-align: center; color: brown;">@Model.TotalCheckedQty</h2>
                                    </div>
                                    <!-- /.card-body -->
                                </div>
                            </div><!-- end inner row -->
                        </div>
                    </div>
                    <div class="col-sm-5 five-two">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="card card-outline card-primary">
                                    <div style="padding: 0px; text-align: center; padding-top: 11px;" class="card-header">
                                        <h6 style="color: blue; font-weight: 700;" class="card-title">Functional Fail</h6>
                                    </div>
                                    <!-- /.card-header -->
                                    <div class="card-body cbbb">
                                        <h2 style="text-align: center; color: brown;">@Model.TotalFunctionalFault</h2>
                                    </div>
                                    <!-- /.card-body -->
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="card card-outline card-primary">
                                    <div style="padding: 0px; text-align: center; padding-top: 11px;" class="card-header">
                                        <h6 style="color: blue; font-weight: 700;" class="card-title">Aesthetic Fail</h6>
                                    </div>
                                    <!-- /.card-header -->
                                    <div class="card-body cbbb">
                                        <h2 style="text-align: center; color: brown;">@Model.TotalAestheticFault</h2>
                                    </div>
                                    <!-- /.card-body -->
                                </div>
                            </div>
                        </div><!-- end inner row -->
                    </div>
                </div>​<!-- end outer row -->
            </div>
            <!-- info row -->
            <div class="row invoice-info">
                <div class="col-sm-4 invoice-col">
                    <h2 style="color: #355400; font-weight: bolder;">Functional Fault Qty:</h2>
                    
                    <div class="card">
                        <div class="table-responsive">
                            <table class="table">
                                <tr>
                                    <th style="width:50%">Material:</th>
                                    <td style="text-align: end;">@Model.FuncMaterialFault</td>
                                </tr>
                                <tr>
                                    <th>Production Process</th>
                                    <td style="text-align: end;">@Model.FuncProductionFault</td>
                                </tr>
                                <tr>
                                    <th>Software:</th>
                                    <td style="text-align: end;">@Model.FuncSoftwareFault</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                    <h2 style="color: #355400; font-weight: bolder;">Aesthetic Fault Qty:</h2>
                    
                    <div class="card">
                        <div class="table-responsive">
                            <table class="table">
                                <tr>
                                    <th style="width:50%">Material:</th>
                                    <td style="text-align: end;">@Model.AesthMaterialFault</td>
                                </tr>
                                <tr>
                                    <th>Production Process</th>
                                    <td style="text-align: end;">@Model.AesthProductionFault</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.row -->
            <!-- Table row -->
            <div style="margin-top: 16px;" class="row">
                <div class="col-12 table-responsive">
                    <table  class="table table-striped table-bordered">
                        <thead style=" background-color: #94b6d8; color: black;">
                            <tr>
                                <th>Fault Type</th>
                                <th>Image of Fault</th>
                                <th>Fault Quantity #</th>
                                <th>Root Cause</th>
                                <th>Solution</th>
                                <th>Remarks</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var itm in Model.MobileRNDFaultDetailsViewModel)
                            {
                                <tr>
                                    <td>@itm.FaultType</td>
                                    <td>No Image</td>
                                    <td>@itm.FaultQty</td>
                                    <td>@itm.RootCause</td>
                                    <td>@itm.Solution</td>
                                    <td>@itm.Remarks</td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
                <!-- /.col -->
            </div>
        </div>
        <!-- /.invoice -->
    </div><!-- /.col -->
</div>

