@model WebAppEs.ViewModel.PartsModel.PartsModelViewModel2
@{
    ViewData["Title"] = "Create Model";
}

<h1> Create Model </h1>

<div class="row">
    <div class="col-md-12">
        <form asp-action="CreateModel">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Supplier" class="control-label"></label>
                        <select asp-for="SupplierId" id="ddlSupplier" class="form-control">
                            <option value="@Model.SupplierId">--Select Supplier--</option>
                            @foreach (var item in Model.supplier)
                            {
                                <option value="@item.Id">@item.SupplierName</option>
                            }
                        </select>
                        <span asp-validation-for="SupplierId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                @if (@Model.IsUpdate == "Update")
                {
                    <input type="submit" value="Update" class="btn btn-primary" />
                }
                else
                {
                    <input type="submit" value="Create" class="btn btn-primary" />
                }
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $('#ddlSupplier').select2({});
        });
    </script>
}